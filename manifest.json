{
  "manifest_version": 2,
  "name": "AWAYFL Debug extension",
  "description": "AwayFL extension for debug AVM/AVM2 executions!",
  "version": "0.1.0",
  "devtools_page": "dist/devtools.html",
  "icons": {
    "16": "gfx/icon16.png",
    "48": "gfx/icon48.png",
    "128": "gfx/icon128.png"
  },
  "permissions": ["tabs", "*://localhost/*"],
  "background": {
    "page": "dist/background.html",
    "persistent": false
  },
  "web_accessible_resources": ["dist/js/page-api.js", "dist/js/content.js"],
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  }
}
